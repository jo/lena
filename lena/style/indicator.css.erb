#indicator {
  position: absolute;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  background-color: white;
  background-repeat: no-repeat;
  background-position: center center;
}
#indicator p {
  position: absolute;
  top: 50%;
  width: 100%;
  padding-top: 15px;
  text-align: center;
  font-weight: bold;
  color: black;
  cursor: default;
}
#indicator {
  background-image: url('data:image/gif;base64,<%= base64 read 'images/indicator.gif' %>');
}
